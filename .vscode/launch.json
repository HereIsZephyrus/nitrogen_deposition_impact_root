    "version": "0.2.0",
    "configurations": [
        {
            "name": "download hensen dataset",
            "type": "debugpy",
            "request": "launch",
            "program": "src/global_simulation/download_hensen.py",
            "console": "integratedTerminal",
            "args": [
                "--output", "/mnt/warehouse/hensen",
                "--workers", "10"
            ]
        },
        {
            "name": "debug whole project",
            "type": "debugpy",
            "request": "launch",
            "module": "src"
        },
        {
            "name": "debug global_simulation module",
            "type": "debugpy",
            "request": "launch",
            "module": "src.global_simulation"
        },
        {
            "name": "debug N_impact_soil module",
            "type": "debugpy",
            "request": "launch",
            "module": "src.n_impact_soil",
            "args": [
                "--control-folder", "./data/",
                "--n-addition", "100",
                "--n-type", "N"
            ]
        },
        {
            "name": "debug climate_cluster module",
            "type": "debugpy",
            "request": "launch",
            "module": "src.climate_cluster",
            "args": [
                "--sample-k", "2",
                "--confidence", "0.80",
                "--output", "./results/",
                "--climate", "/mnt/repo/ndata/wcbio5m/",
                "--sample", "./data/sample.csv"
            ]
        },
        {
            "name": "debug biomass_relationship module",
            "type": "debugpy",
            "request": "launch",
            "module": "src.biomass_relationship",
            "args": [
                "--statistic-folder", "./data/",
                "--output", "./results/",
                "--climate", "/mnt/repo/ndata/wcbio5m/"
            ]
        }
    ]
}